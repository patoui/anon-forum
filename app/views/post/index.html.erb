<div class="container">

  <div class="card">

    <div class="card-header">

      <h3 class="d-inline-block m-0">Threads</h3>

      <a href="/thread/new" class="btn btn-outline-secondary btn-sm float-right mt-1">New Thread</a>

    </div>

    <div class="card-body">

      <ul class="list-group list-group-flush">

        <% @posts.each do |post| %>

          <li class="list-group-item">

            <h5 class="mt-3"><a href="/thread/<%= post.slug %>"><%= post.title %></a></h5>

            <p><%= post.body ? strip_tags(post.body)[0...100] + '...' : '' %></p>

          </li>

        <% end %>

      </ul>

    </div>

  </div>

</div>

