<div class="container">

  <div class="card">

    <div class="card-header">

      <h3 class="m-0"><%= @post.title %></h3>

    </div>

    <div class="card-body">

      <p class="card-text"><%= @post.body.html_safe %></p>

      <button
        type="button"
        class="upvote btn pl-2 pr-2 light-grey"
        data-url="<%= "/thread/#{@post.slug}/upvote" %>">
        <i class="fas fa-thumbs-up"></i><span class="vote-count ml-3"><%= @post.upvote_count %></span>
      </button>

      <button
        type="button"
        class="downvote btn pl-2 pr-2 light-grey"
        data-url="<%= "/thread/#{@post.slug}/downvote" %>">
        <i class="fas fa-thumbs-down"></i><span class="vote-count ml-3"><%= @post.downvote_count %></span>
      </button>

    </div>

  </div>

  <% if @post.has_replies %>
    <%= render 'reply/shared/main' %>
  <% end %>

</div>

